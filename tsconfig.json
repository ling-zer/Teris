{
  "compilerOptions": { // 编译选项
    "target": "es5", // 编译为js时使用的标准, es2016 -> es7
    "module": "esnext", // 编译目标使用的模块化标准
    "lib": ["ES2016", "DOM"], // 配置执行环境
    "sourceMap": true, // 如果报错，会对应到相应的ts文件
    "strict": true, //
    "removeComments": true, // 编译结果中移除注释
    "esModuleInterop": true, // es6的方式进行交互
    "moduleResolution":"Node", // 设置解析模块的模式
    "isolatedModules": true // 强制要求每个文件是一个模块
  },
  "include": ["./src"] // 编译目录(只编译src下的ts文件)
  // "files": ["./src/index.ts"] 只编译某些文件
}
